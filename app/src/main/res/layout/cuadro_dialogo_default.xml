<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <ImageView
        android:id="@+id/imageView230"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondo_reporte_1" />

    <Spinner
        android:id="@+id/reporte_sp1"
        android:layout_width="373dp"
        android:layout_height="24dp"
        android:background="#B6781B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView230"
        app:layout_constraintVertical_bias="0.192" />

    <EditText
        android:id="@+id/reporte_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#74F8F5F5"
        android:ems="10"
        android:hint="Digite Codigo"
        android:inputType="textPersonName"
        android:textColorHint="#020101"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView230"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/imageView230"
        app:layout_constraintTop_toBottomOf="@+id/reporte_sp1"
        app:layout_constraintVertical_bias="0.087" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="213dp"
        android:layout_height="149dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView230"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reporte_1"
        app:layout_constraintVertical_bias="0.033">

        <RadioButton
            android:id="@+id/reporte_r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#74F8F5F5"
            android:text="DUNGEON ENTRACE"
            android:textColor="#040303"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

        <RadioButton
            android:id="@+id/reporte_r2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#74FAF5F5"
            android:text=" UNDERWORD CARD"
            android:textColor="#000000"
            android:textStyle="normal|bold" />

        <RadioButton
            android:id="@+id/reporte_r3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#74FDFCFC"
            android:text="REPECHAGE YOU LOSE"
            android:textColor="#020101"
            android:textStyle="normal|bold" />
    </RadioGroup>

    <ImageButton
        android:id="@+id/reportes_b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reporte_sp1"
        app:layout_constraintVertical_bias="0.821"
        app:srcCompat="@drawable/boton_lose" />

    <ImageView
        android:id="@+id/imageView223"
        android:layout_width="399dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toTopOf="@+id/reporte_sp1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/systme_report_titulo" />

    <ImageButton
        android:id="@+id/reporte_cerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/reporte_sp1"
        app:layout_constraintEnd_toEndOf="@+id/imageView223"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView223"
        app:layout_constraintVertical_bias="0.255"
        app:srcCompat="@drawable/cerrar1" />

    <RadioGroup
        android:id="@+id/reporte_rg2"
        android:layout_width="151dp"
        android:layout_height="104dp"
        android:background="#74F8F5F5"
        app:layout_constraintBottom_toTopOf="@+id/reportes_b1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.403">

        <RadioButton
            android:id="@+id/reporte_r4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 &quot;CERO&quot;"
            android:textStyle="normal|bold" />

        <RadioButton
            android:id="@+id/reporte_r5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 &quot;UNO&quot;"
            android:textStyle="normal|bold" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/reporte_rg3"
        android:layout_width="346dp"
        android:layout_height="109dp"
        app:layout_constraintBottom_toTopOf="@+id/reportes_b1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reporte_sp1"
        app:layout_constraintVertical_bias="0.813">

        <RadioButton
            android:id="@+id/reporte_r6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6FF8F4F4"
            android:text="EQUIPO: PRIMER ENCUENTRO"
            android:textStyle="normal|bold" />

        <RadioButton
            android:id="@+id/reporte_r7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#74F8F6F6"
            android:text="EQUIPO: SEGUNDO ENCUENTRO"
            android:textStyle="normal|bold" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>