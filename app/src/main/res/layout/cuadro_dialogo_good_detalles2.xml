<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="405dp"
        android:layout_height="587dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView64"
            android:layout_width="389dp"
            android:layout_height="378dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.497"
            app:srcCompat="@drawable/cortina1" />

        <RadioGroup
            android:layout_width="95dp"
            android:layout_height="173dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.884"
            app:layout_constraintStart_toStartOf="@+id/imageView64"
            app:layout_constraintTop_toTopOf="@+id/imageView64">

            <RadioButton
                android:id="@+id/batalla_r7"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Nivel N7"
                android:textColor="#F6F2F2" />

            <RadioButton
                android:id="@+id/batalla_r8"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="Nivel N8"
                android:textColor="#FAF6F6" />

            <RadioButton
                android:id="@+id/batalla_r9"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="Nivel N9"
                android:textColor="#FBF8F8" />

            <RadioButton
                android:id="@+id/batalla_r10"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Nivel N10"
                android:textColor="#F8F6F6" />

            <RadioButton
                android:id="@+id/batalla_r11"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="Nivel N11"
                android:textColor="#FAF6F6" />

            <RadioButton
                android:id="@+id/batalla_r12"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="Nivel N12"
                android:textColor="#F8F4F4" />
        </RadioGroup>

        <ImageButton
            android:id="@+id/reglas_cerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="304dp"
            android:background="@drawable/efecto_cerrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.142"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView64"
            app:srcCompat="@drawable/cerrar1" />

        <RadioGroup
            android:layout_width="95dp"
            android:layout_height="173dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="@+id/imageView64"
            app:layout_constraintTop_toTopOf="@+id/imageView64">

            <RadioButton
                android:id="@+id/batalla_r1"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Nivel N1"
                android:textColor="#F6F2F2" />

            <RadioButton
                android:id="@+id/batalla_r2"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="Nivel N2"
                android:textColor="#FAF6F6" />

            <RadioButton
                android:id="@+id/batalla_r3"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="Nivel N3"
                android:textColor="#FBF8F8" />

            <RadioButton
                android:id="@+id/batalla_r4"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Nivel N4"
                android:textColor="#F8F6F6" />

            <RadioButton
                android:id="@+id/batalla_r5"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="Nivel N5"
                android:textColor="#FAF6F6" />

            <RadioButton
                android:id="@+id/batalla_r6"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="Nivel N6"
                android:textColor="#F8F4F4" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="NIVELES DE BATALLA"
            android:textColor="#FDF9F9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.149"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView64" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>